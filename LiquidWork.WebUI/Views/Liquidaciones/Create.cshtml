@model LiquidWork.WebUI.Models.LiquidacionViewModel

@{
    ViewData["Title"] = "Crear nueva liquidación";
}

    <h1>Crear nueva liquidación</h1>

<h4>Liquidacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" class="form-control" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroLegajo" class="control-label"></label>
                <select asp-for="NumeroLegajo" class ="form-control" asp-items="ViewBag.NumeroLegajo"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
