@model LiquidWork.Core.Model.Legajo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Legajo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CUIL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CUIL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.NumeroLegajo">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<h4>Conceptos fijos</h4>
<hr />
<a asp-controller="Conceptos" asp-action="Create" asp-route-numerolegajo="@Model.NumeroLegajo" >Agregar concepto fijo</a>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConceptosFijos.FirstOrDefault().CodigoConcepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptosFijos.FirstOrDefault().NombreConcepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptosFijos.FirstOrDefault().Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptosFijos.FirstOrDefault().Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptosFijos.FirstOrDefault().TipoConcepto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ConceptosFijos != null)
        {
            foreach (var item in Model.ConceptosFijos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoConcepto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreConcepto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoConcepto)
                    </td>
                    <td>
                        <a asp-controller="Conceptos" asp-action="Edit" asp-route-id="@item.ConceptoId">Edit</a> |
                        <a asp-controller="Conceptos" asp-action="Delete" asp-route-id="@item.ConceptoId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<hr />
<h4>Liquidaciones</h4>
<hr />
<a asp-controller="Liquidaciones" asp-action="Create" asp-route-id="@Model.NumeroLegajo">Agregar liquidación</a>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Liquidaciones.FirstOrDefault().Periodo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Liquidaciones != null)
        {
            foreach (var item in Model.Liquidaciones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Periodo)
                    </td>
                    <td>
                        <a asp-controller="Liquidaciones" asp-action="Edit" asp-route-id="@item.LiquidacionId">Edit</a> |
                        <a asp-controller="Liquidaciones" asp-route-id="@item.LiquidacionId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

