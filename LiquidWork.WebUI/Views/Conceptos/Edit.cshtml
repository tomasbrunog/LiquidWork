@model LiquidWork.WebUI.Models.ConceptoViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Concepto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConceptoId" />
            <div class="form-group">
                <label asp-for="LiquidacionId" class="control-label"></label>
                <input asp-for="LiquidacionId" class="form-control" readonly />
                <span asp-validation-for="LiquidacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoConcepto" class="control-label"></label>
                <input asp-for="CodigoConcepto" class="form-control" />
                <span asp-validation-for="CodigoConcepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreConcepto" class="control-label"></label>
                <input asp-for="NombreConcepto" class="form-control" />
                <span asp-validation-for="NombreConcepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label">Monto Base</label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Porcentaje" class="control-label"></label>
                <input asp-for="Porcentaje" class="form-control" />
                <span asp-validation-for="Porcentaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posicion" class="control-label">Posición (dejar en blanco para poner al final)</label>
                <input asp-for="Posicion" class="form-control" />
                <span asp-validation-for="Posicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoConcepto" class="control-label"></label>
                <select asp-for="TipoConcepto" class="form-control" asp-items="Html.GetEnumSelectList<LiquidWork.Core.Model.TipoConcepto>()"></select>
                <span asp-validation-for="TipoConcepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
